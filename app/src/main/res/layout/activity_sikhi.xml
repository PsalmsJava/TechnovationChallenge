<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    tools:context=".Sikhi">

    <TextView
        android:layout_margin="12dp"
        android:id="@+id/txt_options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_edittext"
        android:padding="22dp"
        android:text="@string/customer_care"
        android:textSize="16dp" />

    <TextView
        android:layout_margin="12dp"
        android:id="@+id/txt_response"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_options"
        android:layout_marginTop="26dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/rounded_edittext"
        android:padding="22dp"
        android:text=""
        android:textSize="22dp" />

    <EditText
        android:id="@+id/edt_response"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_response"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="28dp"
        android:layout_marginRight="171dp"
        android:hint="Enter Text Here"
        android:textSize="22sp" />

    <Button
        android:id="@+id/button_chat_sikhi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_response"
        android:layout_alignParentRight="true"
        android:layout_marginTop="43dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/rounded_button"
        android:text="Send" />

</RelativeLayout>