<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Payment">

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_margin="16dp"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@drawable/secasavatar"
            app:civ_border_width="1dp"
            app:civ_border_color="#FF000000"/>

        <TextView
            android:id="@+id/txt_client_name"
            android:textStyle="bold"
            android:textSize="18sp"
            android:text=""
            android:padding="12dp"
            android:layout_margin="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <TextView
        android:textStyle="bold"
        android:textSize="18sp"
        android:text="Subscription Details"
        android:textAllCaps="true"
        android:layout_gravity="center"
        android:padding="12dp"
        android:layout_margin="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textStyle="bold"
            android:textSize="18sp"
            android:text="Transaction ID : "
            android:textAllCaps="true"
            android:layout_gravity="center"
            android:padding="12dp"
            android:layout_margin="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txt_transaction_id"
            android:textStyle="bold"
            android:textSize="18sp"
            android:text=""
            android:textAllCaps="true"
            android:layout_gravity="center"
            android:padding="12dp"
            android:layout_margin="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textStyle="bold"
            android:textSize="18sp"
            android:text="Subscription Cost:"
            android:textAllCaps="true"
            android:layout_gravity="center"
            android:padding="8dp"
            android:layout_margin="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txt_total_amount"
            android:textStyle="bold"
            android:textSize="18sp"
            android:text=""
            android:textAllCaps="true"
            android:layout_gravity="center"
            android:padding="12dp"
            android:layout_margin="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <TextView
        android:textStyle="bold"
        android:textSize="18sp"
        android:text="Account Details"
        android:textAllCaps="true"
        android:layout_gravity="center"
        android:padding="12dp"
        android:layout_margin="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:background="@color/colorPrimary"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:text="Account Details:\n Account Name: SECAS \nAccountNUmber 00900897654\nBank: United Bank of Africa(UBA) "
        android:textAllCaps="true"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:padding="12dp"
        android:layout_margin="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>



</LinearLayout>